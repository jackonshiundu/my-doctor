{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "baseUrl": "src",
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "incremental": true, // Enable incremental compilation
    "skipLibCheck": true // Optional: Skip library checks to speed up compilation
  },
  "include": ["src/**/*"], // Fixed the path syntax
  "exclude": ["node_modules", "dist", "**/*.test.ts"] // Recommended exclusions
}
